#include <stdio.h>
#include <stdlib.h>
#include <string.h>
void fun(char* arr, char* filepath);

int main() {
    char filepath[255];
    char arr[255];
    char var = 1;
    int exit_flag = 0;

    while (exit_flag != 1) {
        printf("Введите 1 или -1:\n");
        if (scanf("%d", &var) != 1) {
            printf("n/a");
            exit_flag = 1;
        } else {
            if (var == -1) {
                exit_flag = 1;
            }
        }
        switch (var) {
            case (1):
                fun(arr, filepath);
                printf("\n");
                break;
            case (-1):
                break;

            default:
                printf("n/a\n");
                break;
        }
    }
    return exit_flag;
}

void fun(char* arr, char* filepath) {
    FILE* file;
    scanf("%s", filepath);
    file = fopen(filepath, "r");
    if (file == NULL) {
        printf("n/a");
    } else {
        if (fgets(arr, sizeof(arr), file) == NULL) {
            printf("n/a");
        } else {
            do {
                printf("%s", arr);
            } while (fgets(arr, sizeof(arr), file) != NULL);
        }
        fclose(file);
    }
}
